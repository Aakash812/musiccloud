                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/artist5"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Playlists -->
